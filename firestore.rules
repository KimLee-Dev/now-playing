rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Music shares collection
    match /musicShares/{shareId} {
      // Anyone can read music shares
      allow read: if true;

      // Only authenticated users can create shares
      allow create: if request.auth != null
                    && request.resource.data.userId is string
                    && request.resource.data.username is string
                    && request.resource.data.timestamp is number
                    && request.resource.data.location.latitude is number
                    && request.resource.data.location.longitude is number
                    && request.resource.data.location.geohash is string;

      // Users can only delete their own shares
      allow delete: if request.auth != null
                    && resource.data.userId == request.auth.uid;

      // No updates allowed
      allow update: if false;
    }
  }
}
